{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "python ./tools/build_target.py all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Clean and Build",
            "type": "shell",
            "command": "python ./tools/clean_and_build_target.py all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "python ./tools/build_target.py flash",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Serial Monitor",
            "type": "shell",
            "command": "python ./tools/monitor.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Flash and Monitor",
            "type": "shell",
            "command": "python ./tools/flash_and_monitor_helper.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Menu Config",
            "type": "shell",
            "command": "python ./tools/menu_config.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Configure Device Connection",
            "type": "shell",
            "command": "python ./tools/configure_device_connection.py ${input:serialPort} ${input:uploadBaud}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": []
        },
        {
            "label": "Open Documentation",
            "type": "shell",
            "command": "python ./tools/documentation_open.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Update Documentation",
            "type": "shell",
            "command": "python ./tools/documentation_update.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "serialPort",
            "type": "promptString",
            "description": "Enter a serial port to use when connecting to the device. Set to 'auto' to automatically search for the port.",
            "default": "auto"
        },
        {
            "id": "uploadBaud",
            "type": "pickString",
            "description": "Enter an upload baud rate to use. Higher baud rates will upload faster, but may cause upload errors with longer cables.",
            "options": [
                "19200",
                "38400",
                "57600",
                "115200",
                "230400",
                "460800",
                "921600",
                "1228800",
                "1843200"
            ],
            "default": "115200"
        }
    ]
}